<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="android:navigationBarColor">@color/greyDark</item>
        <item name="android:statusBarColor">@color/greyDark</item>
    </style>

    <!--    SCREENS     -->

    <!--    Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--    CUSTOM WIDGETS AND VIEWS    -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--    Outlined Text Input Fields  -->
    <style name="Widget.AppTheme.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <!--   Google Login Activity     -->
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>
